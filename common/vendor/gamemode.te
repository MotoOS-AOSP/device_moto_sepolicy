# Definir el contexto de la aplicación com.motorola.gamemode como un tipo platform_app
typeattribute com_motorola_gamemode_app platform_app;

# Permitir que com.motorola.gamemode acceda a los archivos en vendor_default_prop
allow com_motorola_gamemode_app vendor_default_prop:file { open getattr map read };

# Permitir lectura y escritura si se requiere en archivos del vendor
allow com_motorola_gamemode_app vendor_default_prop:file { read write };

# Permitir acceso a los servicios de propiedades (propiedades de sistema)
allow com_motorola_gamemode_app default_prop:property_service { set };

# Si la aplicación necesita acceder a directorios de vendor
allow com_motorola_gamemode_app vendor_file:dir { read search open };

# Si se necesita acceso a otras clases de archivos
# (como podría ser tmpfs u otros recursos que uses en vendor, dependerá de los logs)
allow com_motorola_gamemode_app tmpfs:file { getattr open read write map };

