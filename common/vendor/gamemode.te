# Definir el tipo com_motorola_gamemode_app para la aplicación com.motorola.gamemode
type com_motorola_gamemode_app;

# Definir el tipo game_service_34_0
type game_service_34_0;

# Permitir que com.motorola.gamemode acceda a game_service_34_0 a través del service_manager
allow com_motorola_gamemode_app game_service_34_0:service_manager { add find };

# Permitir que com.motorola.gamemode realice llamadas Binder al game_service_34_0
allow com_motorola_gamemode_app game_service_34_0:binder { call transfer };

# Permitir acceso a archivos relacionados con vendor_default_prop
allow com_motorola_gamemode_app vendor_default_prop:file { open getattr map read };

# (Opcional) Si necesitas permisos adicionales para leer y escribir en vendor_default_prop
allow com_motorola_gamemode_app vendor_default_prop:file { read write };

# Permitir el acceso a otros archivos en tmpfs si es necesario
allow com_motorola_gamemode_app tmpfs:file { getattr open read write map };

# Permitir que com.motorola.gamemode acceda a propiedades del sistema
allow com_motorola_gamemode_app default_prop:property_service { set };

# Si el gamemode necesita acceder a directorios de vendor, también permitimos el acceso
allow com_motorola_gamemode_app vendor_file:dir { read search open };

